        <template id="s_solutions_caroussel_options" inherit_id="web_editor.snippet_options">
            <xpath expr="." position="inside">
                <div data-js="SlideOption" data-selector=".s_solutions-caroussel">
                    <we-input string="Vitesse (ms)" data-set-interval="" data-name="interval_opt">
                        <we-number data-set-interval="true"/>
                    </we-input>
                    <we-title>Nombre de slides : <span class="slide-count"></span>
                    </we-title>
                    <we-button data-add-slide="true" title="Ajouter une slide">Ajouter une slide</we-button>
                    <we-button data-remove-slide="true" title="Retirer une slide">Retirer une slide</we-button>
                </div>
            </xpath>
