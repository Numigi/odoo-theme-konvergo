<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <template id="s_product-range-hero" name="Hero page gamme">
            <section class="pt112 pb112 s_product-range-hero s_product-range-hero--default" data-snippet="s_product-range-hero" data-name="Hero page gamme">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-6 pb32 d-flex flex-column align-items-start justify-content-center">
                            <img src="/konvergo_theme_base/static/src/img/snippets/s_product-range-hero/konvergo-erp-logo.svg" alt="Icône du produit Konvergo ERP" class="mb-3"/>
                            <h1>Gamme Propulsé</h1>
                            <p class="mt-3 o_default_snippet_text">Cette gamme vous permet de gérer l’ensemble de vos opérations, ainsi que votre site E-commerce et vos interfaces applicatives dans un seul outil !</p>
                        </div>
                        <div class="col-lg-6 d-flex justify-content-center">
                            <img src="/konvergo_theme_base/static/src/img/snippets/s_product-range-hero/arrow-up-man.svg" alt="Illustration d'un homme qui tire la corde d'une flèche"/>
                        </div>
                    </div>
                </div>
            </section>
        </template>

        <template id="s_product-range-hero_options" inherit_id="web_editor.snippet_options" name="s_product-range-hero Options">
            <xpath expr="." position="inside">
                <div data-js="ProductRangeHeroOption" data-selector=".s_product-range-hero">
                    <we-select string="Style" data-name="set_style">
                        <we-button data-set-value="s_product-range-hero--default" data-select-class="s_product-range-hero--default">Bleu</we-button>
                        <we-button data-set-value="s_product-range-hero--red" data-select-class="s_product-range-hero--red">Rouge</we-button>
                        <we-button data-set-value="s_product-range-hero--yellow" data-select-class="s_product-range-hero--yellow">Jaune</we-button>
                    </we-select>
                </div>
            </xpath>
        </template>
    </data>
</odoo>