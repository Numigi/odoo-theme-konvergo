					<a t-att-href="app.href" t-on-click.prevent="">
						<img t-if="app.webIconData" class="konvergo_app_icon" t-att-src="app.webIconData" />
						<img t-else="" class="konvergo_app_icon" src="/theme_konvergo/static/img/default_icon.png" />
